<div class="container">
  <div class="row" style="margin-top: 5%;">
    <div class="col-md-6">
      <%= image_tag "businessman.png" ,class:"img-fluid" %>
    </div>
    <div class="col-md-6 primary_font">
      <div align="center">
        <strong><span class="primary_color" style="font-size: larger">Register NOW ! </span></strong><span  style="font-size:larger">its Free</span>
      </div></br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <label for="formGroupExampleInput">Full Name</label>
          <%= f.text_field :full_name, autofocus: true,class:"form-control validate", placeholder:"Enter Full Name"%>
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput2">Email</label>
          <%= f.email_field :email,class:"form-control validate", placeholder:"Enter Email"%>
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput2">Password</label>
          <%= f.password_field :password,class:"form-control validate",placeholder:"Enter Password"%>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput2">Confirm Password</label>
          <%= f.password_field :password_confirmation,class:"form-control validate",placeholder:"Confirm Password"%>
        </div>

        <div class="d-flex justify-content-center flex-wrap">
          <%= f.submit "Create Account",style:"color:white;background-color:green;width:300px;",class:"btn btn-deep-orange"%>
        </div>
      <%end %>
      <div style="margin-top: 5%;">
        <%= render "devise/shared/links" %>
        Running an Agency? <a href="#" style="font-weight:bold;color:green;font-style:italic">Register Agency</a>
      </div>
    </div>
  </div>
</div>
<br/><br/><br/><br/>